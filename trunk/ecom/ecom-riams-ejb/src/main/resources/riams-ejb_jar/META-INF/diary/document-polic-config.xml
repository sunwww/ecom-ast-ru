    		<field type='row' open='0'/>
    		<field type='row' open='1'/>
    		<field property='history' type='textArea' label='Краткий анамнез...' fieldColSpan='3' required='true'/>
    		<field type='row' open='0'/>
    	</fields>
    	<print filename='dischargeDocumentDiag'/>
	</parameter>
</parameterconfig>